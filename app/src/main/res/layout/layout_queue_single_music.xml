<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vumeter="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/queue_single_song_move"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:tint="#EEABB6"/>

    <TextView
        android:id="@+id/queue_single_song_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/queue_single_song_move"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/queue_single_song_position"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/queue_single_song_move"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/queue_single_song_nm"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/queue_single_song_id"
        android:maxLines="1"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/queue_single_song_play"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@android:drawable/ic_lock_silent_mode_off"
        android:tint="@color/colorPrimary"
        android:visibility="visible"
        android:layout_toEndOf="@+id/queue_single_song_nm"
        android:layout_marginStart="5dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/queue_single_song_menu"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:text="&#8942;"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_toEndOf="@+id/queue_single_song_play"
        android:layout_marginStart="5dp" />

</RelativeLayout>